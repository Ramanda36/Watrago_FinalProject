    <TextView
            android:id="@+id/back_to_register_textview"
            android:layout_width="115dp"
            android:layout_height="24dp"
            android:text="Create account"
            android:textColor="@drawable/schedule_pressed_color"
            android:gravity="center"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_forgot" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.09" app:layout_constraintBottom_toBottomOf="parent"/>
    <!--<ProgressBar-->
    <!--android:id="@+id/progressBar"-->
    <!--android:layout_width="24dp"-->
