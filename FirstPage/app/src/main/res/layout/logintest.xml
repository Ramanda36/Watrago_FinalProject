<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="center"
        android:background="@drawable/bg"
        android:id="@+id/linearLayout"
        android:paddingTop="50dp">

    <!-- Email Label -->
    <ImageView
            android:layout_width="159dp"
            android:layout_height="164dp"
            android:src="@drawable/login_logo"
            android:alpha=".7"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"

            app:layout_constraintVertical_bias="0.043"
            android:id="@+id/imageView3" tools:ignore="UnknownId" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.521"/>
            <!--new1001-->


            <!--app:layout_constraintBottom_toTopOf="@id/imageView3"-->
            <!--app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.485"-->
            <!--android:id="@+id/imageView3" tools:ignore="UnknownId"/>-->


    <EditText
            android:id="@+id/email_edittext_login"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:paddingLeft="80dp"
            android:hint="E-mail"
            android:textSize="18sp"
            android:inputType="textEmailAddress"
            android:textColorHint="#FFF"
            android:textColor="#FFFCD4"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="8dp"
            android:background="@drawable/txt_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.077" app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <!-- Password Label -->


    <EditText
            android:id="@+id/password_edittext_login"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:paddingLeft="80dp"
            android:textSize="18sp"
            android:hint="Password"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:inputType="textPassword"
            android:background="@drawable/txt_password"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.038" app:layout_constraintTop_toBottomOf="@+id/email_edittext_login"
    />


    <Button
            android:id="@+id/login_button_login"
            android:layout_width="170dp"
            android:layout_height="85dp"
            android:padding="12dp"
            android:background="@drawable/btn_login_pressed"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintTop_toBottomOf="@+id/back_to_register_textview" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:id="@+id/txt_forgot"
            android:layout_width="154dp"
            android:layout_height="24dp"
            android:text="Forgot password"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="180dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/chk_keep" app:layout_constraintVertical_bias="1.0"/>
