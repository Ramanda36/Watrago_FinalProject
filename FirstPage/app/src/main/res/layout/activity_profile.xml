<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile">

    <ImageView
            android:id="@+id/image_bg"
            android:layout_width="412dp"
            android:layout_height="384dp"
            android:background="@drawable/profile_bg"
            tools:ignore="MissingConstraints" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/profile_logout"
            android:textColor="@drawable/schedule_pressed_color" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.989"
            app:layout_constraintVertical_bias="0.0"

            app:layout_constraintEnd_toStartOf="@+id/button9"/>


    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_setting_white"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.978"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/button9"/>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="410dp"
            tools:ignore="MissingConstraints"
            android:background="@drawable/profile_set_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="-20dp"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/imageView4"
            android:id="@+id/constraintLayout17">

        <com.example.firstpage.text_run.MarqueeTextView
                android:id="@+id/txt_user"
                android:layout_width="284dp"
                android:layout_height="53dp"
                android:text="username"
                android:textSize="24dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.04"/>

        <Button
                android:id="@+id/txt_info"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:text="個人資料"
                android:paddingLeft="90dp"
                android:textSize="20dp"
                android:gravity="left|center"
                android:textColor="@drawable/profile_txt_color"
                android:background="@drawable/btn_pro_info"

                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.025" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_user"/>

        <Button
                android:id="@+id/txt_preference"
                android:layout_width="260dp"
                android:layout_height="60dp"
                android:text="偏好設定"
                android:textSize="20dp"
                android:paddingLeft="90dp"
                android:gravity="left|center"
                android:textColor="@drawable/profile_txt_color"
                android:background="@drawable/btn_pro_pref"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/txt_info"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:corner_radius="200dp"
            android:background="#DDDDDD"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.091" >

        <pl.droidsonroids.gif.GifImageView
                android:id="@+id/user_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                tools:ignore="MissingConstraints"
                />
        <!--android:src="@drawable/gif_profile_photo"-->


    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.95" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout17">
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_home_pressed"
                android:id="@+id/btn_home"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.075"
                app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_att_pressed"
                android:layout_marginBottom="8dp"
                android:id="@+id/btn_att"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_home"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_travel" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_travel_pressed"
                android:id="@+id/btn_travel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.852"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_iconbtn_07"
                android:id="@+id/btn_profile"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/btn_travel"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>