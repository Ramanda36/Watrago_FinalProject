<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".profile_info">

    <ImageView
            android:layout_width="413dp"
            android:layout_height="200dp"
            tools:ignore="MissingConstraints"
            android:background="@drawable/profile_person_bg" android:id="@+id/imageView10"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/info_logout"
            android:textColor="@drawable/schedule_pressed_color" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            tools:ignore="MissingConstraints"
            android:paddingTop="10dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.996"
            app:layout_constraintVertical_bias="0.0"

            app:layout_constraintEnd_toStartOf="@+id/button8"/>

    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_setting_white"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.978"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/button8"/>

    <TextView
            android:id="@+id/txt_name_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:text="username"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView10" app:layout_constraintHorizontal_bias="0.202"
            app:layout_constraintVertical_bias="0.063" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="341dp"
            android:layout_height="508dp"
            android:background="@drawable/profile_person_set_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.564"
            app:layout_constraintVertical_bias="0.417" android:id="@+id/constraintLayout7"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_info">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="299dp"
                android:layout_height="69dp"
                tools:ignore="MissingConstraints"
                android:id="@+id/constraintLayout8" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0">
            <ImageView
                    android:layout_width="17dp"
                    android:layout_height="34dp"
                    android:background="@drawable/profile_person_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.09"
                    app:layout_constraintVertical_bias="0.473" android:id="@+id/imageView11"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="個人資料"
                    android:textColor="#62840B"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:gravity="left|center"
                    android:id="@+id/textView7" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintHorizontal_bias="0.051" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView11" app:layout_constraintVertical_bias="0.0"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
                android:id="@+id/txt_prof_name"
                android:inputType="text"
                android:layout_width="308dp"
                android:layout_height="57dp"
                android:singleLine="true"
                android:focusedByDefault="false"
                android:textSize="16dp"
                android:paddingLeft="80dp"
                android:gravity="left|center"
                android:background="@drawable/profile_txt_name_bg"
                tools:ignore="MissingConstraints" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintVertical_bias="0.021"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout8"
                app:layout_constraintHorizontal_bias="0.454"/>

        <EditText
                android:id="@+id/txt_prof_mail"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:focusedByDefault="false"
                android:layout_width="308dp"
                android:layout_height="57dp"
                android:textSize="16dp"
                android:paddingLeft="80dp"
                android:gravity="left|center"
                android:background="@drawable/profile_txt_mail_bg"
                tools:ignore="MissingConstraints" android:layout_marginBottom="148dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.454"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_prof_name"
                app:layout_constraintVertical_bias="0.0"/>

        <Button
                android:id="@+id/btn_edit_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_trip_save"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_prof_mail" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.95" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout7">
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_home_pressed"
                android:id="@+id/btn_home"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.075"
                app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_att_pressed"
                android:layout_marginBottom="8dp"
                android:id="@+id/btn_att"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_home"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_travel" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_travel_pressed"
                android:id="@+id/btn_travel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.852"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_iconbtn_07"
                android:id="@+id/btn_profile"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/btn_travel"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.512"
                app:layout_constraintVertical_bias="0.0"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
            android:id="@+id/btn_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_person_btn_edit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.231"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.852"/>

</androidx.constraintlayout.widget.ConstraintLayout>