    <com.example.firstpage.text_run.MarqueeTextView
            android:id="@+id/txt_name"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:textColor="#ffffff"
            android:text="User"
            android:textSize="50dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.143"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>
    <com.example.firstpage.text_run.MarqueeTextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:text="這裡是我們要隨機產生的幹話區"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:id="@+id/textView3"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="15dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="@+id/textView2"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="12dp"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/btn_sched_edit_new_trip"
