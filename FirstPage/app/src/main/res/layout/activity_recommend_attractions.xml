<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".AttractionFragment.HotAttractions"
        android:orientation="vertical">

    <TextView
            android:id="@+id/logoutlink"
            android:textColor="@drawable/logout_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:paddingTop="10dp"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_search_gray"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.978"
            app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:id="@+id/new_att_search_btn"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_search_pressed"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="324dp"
            android:layout_marginRight="324dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginLeft="8dp"/>




    <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="400dp"
            android:layout_height="620dp"
            android:background="@drawable/round_bg"
            android:orientation="vertical"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/constraintLayout2"
            tools:ignore="MissingConstraints" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.6">
        <androidx.recyclerview.widget.RecyclerView


                android:id="@+id/recyclerView_new"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_width="311dp"
                android:layout_height="445dp"
                android:layout_margin="10dp"

                tools:ignore="MissingConstraints"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.506"
                android:layout_marginBottom="56dp" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.335">


        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="407dp"
            android:layout_height="85dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3"
            tools:ignore="MissingConstraints"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent">

        <!--改這個button的圖片優-->
        <Button
                android:id="@+id/NewSpot"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_new_att_new"
                android:textColor="#fff"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"/>

        <Button
                android:id="@+id/Myspot"
                android:layout_width="82dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_small_my_att_pressed"
                android:textColor="#fff" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.025"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"/>
        <Button
                android:id="@+id/hotspot"
                android:layout_width="82dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_small_hot_att_pressed"
                android:textColor="#fff"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.974"
                app:layout_constraintVertical_bias="1.0"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginTop="579dp"
            android:id="@+id/nav_btn_lu"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout2" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp">
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_home_pressed"
                android:id="@+id/btn_home"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.075"
                app:layout_constraintVertical_bias="0.0"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_iconbtn_05"
                android:layout_marginBottom="8dp"
                android:id="@+id/btn_att"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_home"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_travel" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_travel_pressed"
                android:id="@+id/btn_travel" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
                android:layout_marginRight="96dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.852"/>
        <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/nav_profile_pressed"
                android:id="@+id/btn_profile"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toEndOf="@+id/btn_travel"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

